{
  "name": "zynapse",
  "version": "0.1.4",
  "description": "A TypeScript library providing a schema-based API system with type-safe server implementations",
  "type": "module",
  "main": "./dist/schema/index.js",
  "module": "./dist/schema/index.js",
  "types": "./dist/schema/index.d.ts",
  "exports": {
    "./schema": {
      "types": "./dist/schema/index.d.ts",
      "import": "./dist/schema/index.js",
      "default": "./dist/schema/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js",
      "default": "./dist/server/index.js"
    }
  },
  "bin": {
    "zynapse-cli": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsgo -p tsconfig.build.json && bun run fix-cli-shebang",
    "fix-cli-shebang": "echo '#!/usr/bin/env bun' | cat - dist/cli/index.js > dist/cli/index.js.tmp && mv dist/cli/index.js.tmp dist/cli/index.js && chmod +x dist/cli/index.js",
    "prepublishOnly": "bun run build",
    "test": "bun test"
  },
  "keywords": [
    "typescript",
    "api",
    "schema",
    "zod",
    "type-safe"
  ],
  "devDependencies": {
    "@types/bun": "^1.3.2",
    "@typescript/native-preview": "^7.0.0-dev.20250606.1",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "json-schema-to-zod": "^2.6.1",
    "prettier": "^3.5.3",
    "zod": "^3.24.3",
    "zod-to-json-schema": "^3.24.6",
    "zod-to-ts": "^1.2.0"
  }
}